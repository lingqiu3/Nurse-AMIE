{
    "type": "APL",
    "version": "1.3",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [
        {
            "colors": {
                "Background": "#F79AC0",
                "myBlue": "#66DFFF"
            }
        }
    ],
    "styles": {},
    "onMount": [
        {
          "type": "AnimateItem",
          "easing": "ease-in-out",
          "componentId": "APL_Page",
          "duration":1000,
            "value": [
            {
                "property": "opacity",
                "to": 1
            }
            ]
        }
        ],
    "graphics": {},
    "commands": {},
    "layouts": {
        "SelectionTab":{
            "parameters": [
                "primaryText",
                "arguments"
            ],
            "items":[
                        {
                          "type": "Frame",
                          "borderRadius": 25,
                          "width": "80vw",
                          "height": "15vh",
                          "top": "25vh",
                          "left": "7vw",
                          "position": "absolute",
                          "backgroundColor": "rgba(245, 96, 89,100%)",
                          "item": {
                                "type": "TouchWrapper",
                                "items":[{
                                    "type": "Text",
                                    "text": "${primaryText}",
                                    "width": "80vw",
                                    "height": "15vh",
                                    "left": "20vw",
                                    "fontSize": "40",
                                    "textAlign": "center",
                                    "textAlignVertical": "center"
                                }],
                                "onPress": [
                                    {
                                        "type": "SendEvent",
                                        "arguments": "${arguments}"
                                    }
                                ]
                          }
                    }
                ]
        }
    },
    "mainTemplate": {
        "items": [
            {
                "type": "Container",
                "id": "APL_Page",
                "opacity": 0,
                "items": [
                    {
                         "type": "Image",
                         "source": "https://apldmo.s3.amazonaws.com/raw_background.jpg",
                         "scale": "best-fill",
                         "width": "100vw",
                         "height": "100vh"
                         
                    },
                    {
                        "type": "Image",
                        "source": "https://nurse-amie.s3.us-east-2.amazonaws.com/Nurse_AMIE_Skill/back-button-icon-11.jpg",
                        "position": "absolute",
                        "scale": "best-fill",
                        "top": "4.5vh",
                        "left": "2vw",
                        "width": "8.5vw",
                        "height": "14vh"
                   },
                   {
                       "type": "Container",
                       "id": "pink_ribbon_con",
                       "width": "10vw",
                       "height": "15vh",
                       "left": "1.5vw",
                       "top": "3.2vh",
                       "position": "absolute",
                       "items": [
                                   {
                                   "type": "TouchWrapper",
                                   "id": "pink_ribbon",
                                   "width": "15vw",
                                   "height": "30vh",
                                   "onPress": [
                                       {
                                           "type": "SendEvent",
                                           "arguments": [
                                               "apl_back"
                                           ]
                                       }
                                   ]
                               }
                           
                           ]
                       
                    },
                    {
                        "type": "Container",
                        "width": "100vw",
                        "height": "20vh",
                        "position": "absolute",
                        "items": [
                            {
                                "type": "Text",
                                "text": "<b> SOOTHING MUSIC </b>",
                                "fontWeight": "20",
                                "fontSize": "60",
                                "top": "50",
                                "textAlign": "center"
                            }
                        ]
                    },
                    {
                      "type": "ScrollView",
                        "height": "70vh",
                        "top": "23vh",
                        "width": "80vw",
                        "left": "10vw",
                        "position": "absolute",
                      "item": [
                        {
                        "type": "Sequence",
                        "height": "70vh",
                        "top": "23vh",
                        "width": "80vw",
                        "left": "10vw",
                        "shrink": 1,
                        "position": "absolute",
                        "item": [
                            {
                            "type": "SelectionTab",
                            "left": "50vw",
                            "primaryText": "3:00 Hours | Relaxing Music with Water Sounds",
                            "arguments": ["selected_activity","soothing_music", "0"]
                            },
                            {
                            "type": "SelectionTab",
                            "left": "50vw",
                            "primaryText": "3:00 Hours | Instrumental Flute Music",
                            "arguments": ["selected_activity","soothing_music", "1"],
                            "spacing": "3vw"
                            },
                            {
                            "type": "SelectionTab",
                            "left": "50vw",
                            "primaryText": "3:00 Hours | Music for Healing",
                            "arguments": ["selected_activity","soothing_music", "2"],
                            "spacing": "3vw"
                            },
                            {
                            "type": "SelectionTab",
                            "left": "50vw",
                            "primaryText": "8:00 Hours | Mix of Soothing Music",
                            "arguments": ["selected_activity","soothing_music", "3"],
                            "spacing": "3vw"
                            }
                        ]
                    }

                        ]
                    }
                ]
            }
        ],
        "parameters": [
            "payload",
            "LambdaData"
        ]
    }
}